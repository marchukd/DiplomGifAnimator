<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brightnessContrast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/brMenu"
        android:layout_gravity="center"
        android:layout_width="@dimen/bottomMenuSize"
        android:layout_height="@dimen/bottomMenuSize"
        android:background="@drawable/ic_brightness" />

    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/efMenu"
        android:layout_width="@dimen/bottomMenuSize"
        android:layout_height="@dimen/bottomMenuSize"
        android:background="@drawable/ic_brush" />
</LinearLayout>